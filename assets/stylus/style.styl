$dark = #0D1B2A;
$dark_light = #1B263B;
$light = #A0AABA;
$sec = #93B3C9;
$prime = #FF264A;

html
	margin: 0 auto;
	background-color: #0D1B2A;
	color: #FC1A40;
	font-family: 'Open Sans', sans-serif;
	text-align: center;
h1
	font-weight:800;
	font-size: 50px;
h2
	color: #E0CA3C;
p
	color: #F3EFE0;
svg text
	font-size:50px;
	display: inline;
polygon.env
	fill:none;
	stroke:$dark_light;
	stroke-width:8;
	stroke-miterlimit:10;
.first-name
	fill:$light;
	font-family:'OpenSans-Bold';
.last-name
	fill:$prime;
	font-family:'OpenSans-Extrabold';