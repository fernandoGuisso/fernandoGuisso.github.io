@import "_variable"

*
	padding 0
	margin 0 auto
html body
	margin 0 auto
	background-color $dark
	color $light
	font-family 'Open Sans', sans-serif
	text-align center
	overflow hidden
h2.intro
	font-size 15px
p.intro
	padding-top 5%
	width 500px
svg.logo
	padding-top 5%
	width 500px
svg.logo text
	font-size 50px
	display inline
.env
	fill none
	stroke $dark_light
	stroke-width 8
	stroke-miterlimit 10
.first-name
	fill $sec
	font-weight 700
.last-name
	fill $prime
	font-weight 800
.icons-home
	text-align center
	padding-top 2%
#zodiac
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	z-index -1
//Sprites
.icon
	fill $light
	display inline-block
	background-repeat no-repeat
	transition-duration 1s
	transition-time-funciton linear;
.icon:hover
	fill $prime
.icon-github
	width 48px
	height 48px
	background-position 0 0
.icon-twitter
	width 48px
	height 48px
	background-position -64px 0px
.icon-facebook
	width 48px
	height 48px
	background-position -128px 0px
.icon-at
	width 48px
	height 48px
	background-position -192px 0px