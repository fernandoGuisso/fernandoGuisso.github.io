@import "_variable"

*
	padding 0
	margin 0 auto
html body
	margin 0 auto
	background-color $dark
	color $light
	font-family 'Open Sans', sans-serif
	overflow hidden
main, body.main
	text-align center
header
	height 150px
article
	padding 10 20
	background-color $light
	p
		color $dark_light
h2.intro
	font-size 15px
p.intro
	padding-top 5%
	width 500px
svg.logo
	padding-top 5%
	width 500px
	text
		display inline
		font-size 50px
svg.logo-min
	padding-top 1%
	padding-left 1%
	width 500px
	text-align left
	text
		font-size 20px
.env
	fill none
	stroke $dark_light
	stroke-width 8
	stroke-miterlimit 10
.first-name
	fill $sec
	font-weight 700
.last-name
	fill $prime
	font-weight 800
.icons-home
	text-align center
	padding-top 2%
#zodiac
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	z-index -1
#zodiac-blog
	width 100%
	height 250px
	position fixed
	top 0
	left 0
	z-index -1
// SVG Icons 
.icon
	fill $dark_light
	display inline-block
	background-repeat no-repeat
	transition-duration 1s
	transition-time-funciton linear;
	:hover
		fill $prime
